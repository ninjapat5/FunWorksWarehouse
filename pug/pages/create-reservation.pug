doctype html
html(lang='en')
	include ../_templates/head.pug
	+head("FunWorks Warehouse | Make a Reservation | Create a Reservation", "reserve.css", "date-time.css")
	body.move-content-down
		include ../_templates/navbar.pug
		+navbar("Reserve")

		#create-reservation.section-primary-color.v-align-parent
			.v-align-child
				.row
					.col-md-8.col-md-offset-2.well#create-form
						form.material-form#reservation-form(action='reservation-created.php' method="POST" name="create")
							.col-sm-12
								h1.dark-text.text-center Create a reservation
								br
							.col-sm-12
								#error-message
									p Oops! Looks like there was something wrong with that information, please correct the info in the highlighted boxes
							.col-sm-6
								.input-block#first-name
									label(for='first-name') First Name
									input.form-control(type='text' name="first-name")
							.col-sm-6
								.input-block#last-name
									label(for='last-name') Last Name
									input.form-control(type='text' name="last-name")
							.col-sm-6
								.input-block#email
									label(for='email') Email
									input.form-control(type='text' name="email")
							.col-sm-6
								.input-block#people
									label(for='people') Number of people
									input.form-control(type='number' name="people")
							.col-sm-6
								.input-block#date
									label(for='date') Date (mm/dd/yyyy)
									input#datetimepicker.form-control(type='text', name='date')
							.col-sm-6
								.input-block#time
									label(for='time') Time
									select.form-control(name='time')
										option(label=" ")
										option(value='10:00 A.M.') 10:00 A.M.
										option(value='11:00 A.M.') 11:00 A.M.
										option(value='12:00 A.M.') 12:00 A.M.
										option(value='1:00 P.M.') 1:00 P.M.
										option(value='2:00 P.M.') 2:00 P.M.
										option(value='3:00 P.M.') 3:00 P.M.
										option(value='4:00 P.M.') 4:00 P.M.
										option(value='5:00 P.M.') 5:00 P.M.
										option(value='6:00 P.M.') 6:00 P.M.
										option(value='7:00 P.M.') 7:00 P.M.
										option(value='8:00 P.M') 8:00 P.M
										option(value='9:00 P.M') 9:00 P.M
										option(value='10:00 P.M') 10:00 P.M
										option(value='11:00 P.M') 11:00 P.M
							.col-sm-12
								input#form-submit.square-button.btn.btn-primary(type="submit", value="Submit")
		include ../_templates/footer.pug
		+footer()
		include ../_templates/scripts.pug
		+scripts("js/date-time.js", "js/reserve.js")
